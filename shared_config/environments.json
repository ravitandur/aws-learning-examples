{
  "company": {
    "name": "Quantleap Analytics LLP",
    "short_name": "ql",
    "email": "quantleapanalytics@gmail.com",
    "domain": "quantleap.in"
  },
  "project": "algo-trading",
  "environments": {
    "dev": {
      "description": "Development environment for active development and testing",
      "removal_policy": "DESTROY",
      "cors_origins": ["http://localhost:3000", "https://dev.quantleap.in"],
      "log_retention_days": 7,
      "enable_point_in_time_recovery": false,
      "token_validity_hours": 24,
      "dashboard_prefix": "Dev"
    },
    "staging": {
      "description": "Staging environment for pre-production testing and validation",
      "removal_policy": "RETAIN",
      "cors_origins": ["https://staging.quantleap.in"],
      "log_retention_days": 30,
      "enable_point_in_time_recovery": true,
      "token_validity_hours": 8,
      "dashboard_prefix": "Staging"
    },
    "production": {
      "description": "Production environment for live algorithmic trading platform",
      "removal_policy": "RETAIN",
      "cors_origins": ["https://app.quantleap.in"],
      "log_retention_days": 90,
      "enable_point_in_time_recovery": true,
      "token_validity_hours": 1,
      "dashboard_prefix": "Prod"
    }
  },
  "aws": {
    "default_region": "ap-south-1",
    "default_profile": "account2"
  },
  "projects": {
    "auth_broker": {
      "stack_name": "auth-broker-stack",
      "description": "User authentication and broker account management",
      "dependencies": [],
      "outputs": {
        "user_pool_id": "UserPoolId",
        "broker_accounts_table": "BrokerAccountsTable",
        "api_gateway_id": "ApiGatewayId"
      }
    },
    "options_trading": {
      "stack_name": "options-trading-stack",
      "description": "Complete options strategy trading platform",
      "dependencies": ["auth_broker"],
      "config": {
        "market_data_ttl_seconds": 300,
        "enable_realtime_websocket": true,
        "max_strategies_per_basket": 10,
        "max_legs_per_strategy": 6,
        "execution_timeout_seconds": 30,
        "enable_paper_trading": true,
        "max_concurrent_executions": 50,
        "indian_market_config": {
          "trading_start_time": "09:15",
          "trading_end_time": "15:30",
          "timezone": "Asia/Kolkata",
          "indices": {
            "NIFTY": {"lot_size": 25, "weekly_expiry": "THURSDAY"},
            "BANKNIFTY": {"lot_size": 15, "weekly_expiry": "WEDNESDAY"},
            "FINNIFTY": {"lot_size": 25, "weekly_expiry": "TUESDAY"},
            "MIDCPNIFTY": {"lot_size": 75, "weekly_expiry": "MONDAY"},
            "SENSEX": {"lot_size": 10, "weekly_expiry": "FRIDAY"}
          }
        }
      }
    }
  }
}